{
	"name": "migu-reader",
	"displayName": "咪咕小说阅读插件",
	"description": "咪咕小说阅读插件",
	"keywords": [
		"vscode",
		"plugin",
		"demo"
	],
	"version": "0.0.1",
	"publisher": "EasternDay",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onCommand:MiguReader.Main"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "MiguReader.Login",
				"title": "登录咪咕"
			},
			{
				"command": "MiguReader.Main",
				"title": "咪"
			}
		],
		"keybindings": [
			{
				"command": "MiguReader.Main",
				"key": "ctrl+f10",
				"mac": "cmd+f10",
				"when": "editorTextFocus"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "editorFocus",
					"command": "MiguReader.Main",
					"alt": "MiguReader.Main",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "咪咕插件",
			"properties": {
				"MiguReader.set.Cookie": {
					"type": "array",
					"default": "",
					"description": "你的Cookie"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"fs": "0.0.1-security",
		"path": "^0.12.7",
		"puppeteer": "^5.2.1"
	}
}
